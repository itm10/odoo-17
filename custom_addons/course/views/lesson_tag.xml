<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_lesson_tag_tree" model="ir.ui.view">
        <field name="name">Lesson.tag.tree</field>
        <field name="model">lesson.tag</field>
        <field name="arch" type="xml">
            <tree string="Tags" editable="top">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>


    <record id="action_lesson_tag" model="ir.actions.act_window">
        <field name="name">Lesson Tags</field>
        <field name="res_model">lesson.tag</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new tag
            </p>
        </field>
    </record>
</odoo>
