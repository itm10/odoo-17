<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_course_lesson_tree" model="ir.ui.view">
        <field name="name">Course.lesson.tree</field>
        <field name="model">course.lesson</field>
        <field name="arch" type="xml">
            <tree string="Lessons">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="description" optional="show"/>
                <field name="is_new" optional="hide"/>
                <field name="created_at" optional="hide"/>
                <field name="tag_ids" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_course_lesson_form" model="ir.ui.view">
        <field name="name">Course.lesson.form</field>
        <field name="model">course.lesson</field>
        <field name="arch" type="xml">
            <form string="Lessons">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="gender"/>
                            <field name="is_new"/>
                            <field name="description" invisible="not is_new" required="is_new"/>
                            <field name="start_date"/>
                        </group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="created_at"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_course_lesson" model="ir.actions.act_window">
        <field name="name">Lessons</field>
        <field name="res_model">course.lesson</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="view_ids" eval="[Command.clear(),
                          (0,0,{'view_mode':'tree', 'view_id': ref('view_course_lesson_tree')}),
                          (0,0,{'view_mode':'form', 'view_id': ref('view_course_lesson_form')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new lesson
            </p>
        </field>
    </record>
</odoo>