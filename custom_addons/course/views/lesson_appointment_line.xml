<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_lesson_appointment_line_tree" model="ir.ui.view">
        <field name="name">lesson.appointment.line.tree</field>
        <field name="model">lesson.appointment.line</field>
        <field name="arch" type="xml">
            <tree string="Appointment Lines" editable="top">
                <field name="sequence" widget="handle"/>
                <field name="appointment_id"/>
                <field name="product_id"/>
                <field name="qty"/>
            </tree>
        </field>
    </record>


    <record id="action_appointment_line" model="ir.actions.act_window">
        <field name="name">Appointment Line</field>
        <field name="res_model">lesson.appointment.line</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new appointment line
            </p>
        </field>
    </record>
</odoo>
