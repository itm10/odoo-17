<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_course_appointment_tree" model="ir.ui.view">
        <field name="name">Course.appointment.tree</field>
        <field name="model">course.appointment</field>
        <field name="arch" type="xml">
            <tree string="Appointments">
                <field name="sequence" widget="handle"/>
                <field name="reference"/>
                <field name="course_id"/>
                <field name="date_appointment" optional="show"/>
                <field name="note" optional="hide"/>
                <field name="create_uid"/>
            </tree>
        </field>
    </record>

    <record id="view_course_appointment_form" model="ir.ui.view">
        <field name="name">Course.appointment.form</field>
        <field name="model">course.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointments">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_ongoing" type="object" string="Ongoing" invisible="state != 'confirmed'" class="oe_highlight"/>
                    <button name="action_done" type="object" string="Done" invisible="state != 'ongoing'" class="oe_highlight"/>
                    <button name="action_canceled" type="object" string="Cancel" invisible="state == 'done'" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,ongoing,done"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="reference" readonly="True"/>
                            <field name="course_id"/>
                            <field name="start_date"/>
                            <field name="date_appointment"/>
                            <field name="total_qty"/>
                        </group>
                        <group>
                            <field name="note"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="Line">
                            <field name="appointment_line_ids">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="qty"/>
                        </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_course_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">course.appointment</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new appointment
            </p>
        </field>
    </record>
</odoo>
